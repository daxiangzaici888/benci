<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background" >

    <RelativeLayout
        android:id="@+id/time_day"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top" >

        <TextView
            android:id="@+id/time_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/white"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/date_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/time_message"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/white"
            android:textSize="30sp" />
    </RelativeLayout>

    <com.kingtech.launcher3.CustomView
        android:id="@+id/line_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="left|center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/img1"
            android:layout_width="255dp"
            android:layout_height="280dp"
            android:background="@drawable/backcar_d"
            android:gravity="center"
            android:text="@string/backcar"
            android:textColor="@android:color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/img2"
            android:layout_width="192dp"
            android:layout_height="200dp"
            android:background="@drawable/blue_d"
            android:gravity="center"
            android:text="@string/bluetooth"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/img3"
            android:layout_width="192dp"
            android:layout_height="200dp"
            android:background="@drawable/car_d"
            android:gravity="center"
            android:text="@string/car"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/img4"
            android:layout_width="192dp"
            android:layout_height="200dp"
            android:background="@drawable/navi_d"
            android:gravity="center"
            android:text="@string/navi"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/img5"
            android:layout_width="192dp"
            android:layout_height="200dp"
            android:background="@drawable/setting_d"
            android:gravity="center"
            android:text="@string/setting"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/img6"
            android:layout_width="192dp"
            android:layout_height="200dp"
            android:background="@drawable/vedio_d"
            android:gravity="center"
            android:text="@string/vedio"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/img7"
            android:layout_width="192dp"
            android:layout_height="200dp"
            android:background="@drawable/phone_connect_d"
            android:gravity="center"
            android:text="@string/phone_conntect"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/img8"
            android:layout_width="192dp"
            android:layout_height="200dp"
            android:background="@drawable/normal_car_info_d"
            android:gravity="center"
            android:text="@string/normal_car_info"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </com.kingtech.launcher3.CustomView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:textSize="60sp"
            android:textStyle="italic"
            android:typeface="monospace" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/back"
            android:clickable="true" />

        <ImageView
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/back"
            android:background="@drawable/menu"
            android:clickable="true" />
    </RelativeLayout>

</RelativeLayout>